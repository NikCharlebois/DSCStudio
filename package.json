{
  "name": "dscstudio",
  "version": "0.1.0",
  "description": "DSC Studio allows you to generate DSC configurations from templates",
  "main": "index.js",
  "scripts": {
    "lint": "jshint src/scripts",
    "pretest": "npm run lint -s",
    "test": "mocha \"tests/JavaScript/*.js\" --reporterÂ mocha-junit-reporter",
    "minify:css": "cleancss src/css/main.css -o modules/DSCStudio/engine/css/main.min.css",
    "minify:js": "gulp uglifyjs",
    "watch": "watch \"npm run minify:js && npm run minify:css\" src/scripts/ src/css/",
    "publishSyntaxHighlighter": "gulp publishSyntaxHighlighter",
    "build": "npm run minify:js && npm run minify:css && npm run copymodulescripts",
    "copymodulescripts": "npm run publishSyntaxHighlighter && powershell -File .\\Build\\Publish-NodeModules.ps1"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "devDependencies": {
    "clean-css": "^3.4.21",
    "file-saver": "^1.3.3",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^2.0.0",
    "handlebars": "^4.0.6",
    "jquery": "^3.1.1",
    "jshint": "^2.9.4",
    "mocha": "^3.1.2",
    "mocha-junit-reporter": "^1.12.1",
    "office-ui-fabric-js": "^1.2.0",
    "requirejs": "^2.3.2",
    "simple-mock": "^0.7.3",
    "uglify-js": "^2.7.4",
    "watch": "^1.0.1"
  }
}
